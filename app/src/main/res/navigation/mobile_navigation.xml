<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- adds bottom tabs, label can be changed in string.xml -->
    <fragment
        android:id="@+id/navigation_Financial_Services"
        android:name="com.example.aers_global.ui.finance.FinanceFragment"
        android:label="@string/title_Finance"
        tools:layout="@layout/fragment_finance" />

    <fragment
        android:id="@+id/navigation_Inspection_Services"
        android:name="com.example.aers_global.ui.inspection.InspectionFragment"
        android:label="@string/title_Inspection"
        tools:layout="@layout/fragment_inspection" />

    <fragment
        android:id="@+id/navigation_Food_Basics"
        android:name="com.example.aers_global.ui.food_delivery.FoodDeliveryFragment"
        android:label="@string/title_Food_Basics"
        tools:layout="@layout/fragment_food_delivery" />

    <fragment
        android:id="@+id/navigation_Catering_and_Events"
        android:name="com.example.aers_global.ui.catering.CateringFragment"
        android:label="@string/title_Catering_and_Events"
        tools:layout="@layout/fragment_catering" />
</navigation>